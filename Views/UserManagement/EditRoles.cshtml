@model SteelHorseTrucks.Models.EditRolesViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<h2 class="mb-4">Edit Roles for <strong>@Model.Email</strong></h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-4">
        <label class="form-label">Select roles to assign:</label>
        <div class="form-check">
            @foreach (var role in Model.AvailableRoles)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedRoles"
                           value="@role"
                    @(Model.AssignedRoles.Contains(role) ? "checked" : "")
                           id="role_@role" />
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
            }
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Save Changes
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to User List
        </a>
    </div>
</form>
