@model List<SteelHorseTrucks.Models.UserWithRolesViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-4">User Management</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Assigned Roles</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditRoles" asp-route-id="@user.UserId" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
